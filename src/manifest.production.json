{
    "manifest_version": 3,
    "name": "github-enhance",
    "description": "Enhance GitHub experience",
    "version": "0.0.1",
    "background": {
        "service_worker": "/js/background.js"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.github.com/*"
            ],
            "js": [
                "/js/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}