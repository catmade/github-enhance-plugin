{
    "manifest_version": 2,
    "name": "github-enhance",
    "description": "Enhance GitHub experience",
    "version": "0.0.1",
    "background": {
        "scripts": [
            "/js/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}